import 'package:flutter/foundation.dart';
import 'package:flutter/material.dart';
import '../../providers/word_book_provider.dart';
import '../../services/algorithm_scheduler.dart';
import '../../services/tts_service.dart';
import '../../services/learning_stats_service.dart';

class FlashcardPage extends StatefulWidget {
  final String? bookId;
  final String? bookName;
  final int? unitOffset;
  final int? unitLimit;
  final String? unitName;

  const FlashcardPage({
    super.key,
    this.bookId,
    this.bookName,
    this.unitOffset,
    this.unitLimit,
    this.unitName,
  });

  @override
  State<FlashcardPage> createState() => _FlashcardPageState();
}

class _FlashcardPageState extends State<FlashcardPage> {
  List<Map<String, dynamic>> _words = [];
  int _currentIndex = 0;
  bool _showBack = false;
  bool _isLoading = true;
  bool _isGrading = false;  // 防止重复点击评分按钮
  final AlgorithmScheduler _scheduler = AlgorithmScheduler.instance;

  // App Theme Colors
  static const Color _primaryColor = Color(0xFF3C8CE7);
  static const Color _backgroundColor = Color(0xFFF0F2F5);

  // 获取当前单词的收藏状态
  bool get _isCurrentWordCollected =>
      _currentWord != null && (_currentWord!['Collected'] as int? ?? 0) == 1;

  // 收藏/取消收藏
  Future<void> _toggleCollect() async {
    if (_currentWord == null) return;
    final wordId = _currentWord!['WordId'] as String;
    final newCollected = !_isCurrentWordCollected;
    await WordBookProvider.instance.collectWord(wordId, newCollected);
    // 更新本地状态
    if (mounted) {
      setState(() {
        _words[_currentIndex]['Collected'] = newCollected ? 1 : 0;
      });
    }
  }

  // 直接标记为已掌握
  Future<void> _markAsMastered() async {
    if (_currentWord == null) return;
    final wordId = _currentWord!['WordId'] as String;
    await WordBookProvider.instance.setMastered(wordId);
    if (mounted) {
      _goToNextWord();
    }
  }

  // 寤跺悗瀛︿範锛堣烦杩囧綋鍓嶏紝鏀惧埌鏈尾锛?
  void _postpone() {
    if (_currentWord == null || _words.length <= 1) return;
    setState(() {
      final word = _words.removeAt(_currentIndex);
      _words.add(word);
      // 绱㈠紩涓嶅彉锛屼絾褰撳墠鍗曡瘝宸插彉鎴愭柊鐨?
      _showBack = false;
    });
  }

  // 璺冲埌涓嬩竴涓崟璇?
  void _goToNextWord() {
    setState(() {
      _showBack = false;
      if (_currentIndex < _words.length - 1) {
        _currentIndex++;
      } else {
        _showSessionComplete();
      }
    });
  }

  void _playAudio() {
    if (_currentWord != null) {
      final word = _currentWord!['Word'] as String? ?? '';
      TtsService.instance.speak(word);
    }
  }

  @override
  void initState() {
    super.initState();
    _loadWords();
  }

  Future<void> _loadWords() async {
    setState(() => _isLoading = true);

    final provider = WordBookProvider.instance;
    final bookId = widget.bookId ?? provider.books.firstOrNull?.bookId;

    if (bookId != null) {
      List<Map<String, dynamic>> loadedWords;

      // 濡傛灉鎸囧畾浜嗗崟鍏冨亸绉伙紝鍒欏姞杞藉崟鍏冨唴鐨勫崟璇?      if (widget.unitOffset != null) {
        if (kDebugMode) {
          debugPrint('馃摉 FlashcardPage loading unit: offset=${widget.unitOffset}, limit=${widget.unitLimit}');
        }
        loadedWords = await provider.getWordsForBookByRange(
          bookId,
          offset: widget.unitOffset!,
          limit: widget.unitLimit ?? 30,
        );
        if (kDebugMode) {
          debugPrint('馃摉 Loaded ${loadedWords.length} words for unit, first word: ${loadedWords.isNotEmpty ? loadedWords.first['Word'] : 'none'}');
        }
      } else {
        // 榛樿鍔犺浇澶嶄範璇嶅拰鏂拌瘝
        final reviewWords = await provider.getWordsForReview(bookId, limit: 50);
        final newWords = await provider.getWordsForBook(bookId, status: 0, limit: 50);
        loadedWords = [...reviewWords, ...newWords];
      }

      if (mounted) {
        setState(() {
          _words = loadedWords;
          _isLoading = false;
        });
      }
    } else {
      if (mounted) {
        setState(() => _isLoading = false);
      }
    }
  }

  Map<String, dynamic>? get _currentWord => 
      _words.isNotEmpty && _currentIndex < _words.length ? _words[_currentIndex] : null;

  void _flipCard() {
    setState(() => _showBack = !_showBack);
    if (_showBack) {
      _playAudio();
    }
  }

  Future<void> _grade(int rating) async {
    if (kDebugMode) {
      debugPrint('馃幆 _grade called with rating: $rating');
    }

    if (!mounted) {
      if (kDebugMode) {
        debugPrint('鉂?Widget not mounted, returning');
      }
      return;
    }

    if (_isGrading) {
      if (kDebugMode) {
        debugPrint('鉂?Already grading, returning');
      }
      return;
    }

    setState(() => _isGrading = true);

    if (_currentWord == null) {
      if (kDebugMode) {
        debugPrint('鉂?No current word, returning');
      }
      setState(() => _isGrading = false);
      return;
    }

    final word = _currentWord!;
    final wordId = word['WordId'] as String;
    if (kDebugMode) {
      debugPrint('馃摑 Processing word: ${word['Word']}, WordId: $wordId');
    }

    final learnParam = word['LearnParam'] as String?;
    final result = _scheduler.schedule(learnParam, rating);

    int newStatus;
    if (rating == 1) {
      newStatus = 1;
    } else if (result.reps >= 3 && rating >= 3) {
      newStatus = 2;
    } else {
      newStatus = 1;
    }

    if (kDebugMode) {
      debugPrint('馃搳 New status: $newStatus, algorithm: ${_scheduler.algorithmDisplayName}');
    }

    // 鍏堟洿鏂?UI 鐘舵€侊紝鍐嶅紓姝ユ洿鏂版暟鎹簱
    final shouldShowComplete = _currentIndex >= _words.length - 1;

    setState(() {
      _showBack = false;
      if (!shouldShowComplete) {
        _currentIndex++;
        if (kDebugMode) {
          debugPrint('鉁?Advanced to index: $_currentIndex');
        }
      }
    });

    // 寮傛鏇存柊鏁版嵁搴擄紙涓嶉樆濉?UI锛?    WordBookProvider.instance.updateWordStatus(
      wordId,
      newStatus,
      result.learnParam,
      result.nextReview.millisecondsSinceEpoch.toString(),
    ).then((_) {
      if (kDebugMode) {
        debugPrint('馃捑 Database updated for word: ${word['Word']}');
      }
    }).catchError((e) {
      if (kDebugMode) {
        debugPrint('鉂?Database error: $e');
      }
    });

    // 璁板綍瀛︿範缁熻
    final currentStatus = word['LearnStatus'] as int? ?? 0;
    if (currentStatus == 0) {
      // 鏂拌瘝
      LearningStatsService.instance.recordNewWord();
    } else {
      // 澶嶄範
      LearningStatsService.instance.recordReview();
    }
    
    // 鏄剧ず瀹屾垚瀵硅瘽妗?    if (shouldShowComplete && mounted) {
      setState(() => _isGrading = false);
      _showSessionComplete();
    } else {
      setState(() => _isGrading = false);
    }
  }

  void _showSessionComplete() {
    showDialog(
      context: context,
      barrierDismissible: false,
      builder: (context) => AlertDialog(
        title: const Text('学习完成！'),
        content: Column(
          mainAxisSize: MainAxisSize.min,
          mainAxisSize: MainAxisSize.min,
          children: [
            Icon(Icons.check_circle, size: 64, color: Colors.green[400]),
            const SizedBox(height: 16),
            Text('本轮学习完成！共学习 \ 个单词',
              style: const TextStyle(fontSize: 16, fontWeight: FontWeight.w500),
            ),
          TextButton(
            onPressed: () {
              Navigator.pop(context);
              Navigator.pop(context);
            },
            child: const Text('杩斿洖'),
          ),
          ElevatedButton(
            onPressed: () {
              Navigator.pop(context);
              setState(() {
                _currentIndex = 0;
              });
              _loadWords();
            },
            child: const Text('缁х画瀛︿範'),
          ),
        ],
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: _backgroundColor,
      appBar: AppBar(
        title: Text(widget.bookName ?? '闂崱瀛︿範'),
        backgroundColor: Colors.white,
        foregroundColor: Colors.black87,
        elevation: 0,
        actions: [
          if (_currentWord != null)
            IconButton(
              icon: Icon(
                _isCurrentWordCollected ? Icons.star : Icons.star_border,
                color: _isCurrentWordCollected ? Colors.amber : Colors.grey,
              ),
              onPressed: _toggleCollect,
              tooltip: '鏀惰棌',
            ),
          IconButton(
            icon: const Icon(Icons.volume_up),
            onPressed: _playAudio,
            tooltip: '鎾斁鍙戦煶',
          ),
        ],
      ),
      body: _isLoading
          ? const Center(child: CircularProgressIndicator())
          : _words.isEmpty
              ? _buildEmptyState()
              : _buildContent(),
    );
  }

  Widget _buildEmptyState() {
    return Center(
      child: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Icon(Icons.check_circle_outline, size: 80, color: Colors.grey[400]),
          const SizedBox(height: 16),
          Text('澶浜嗭紝浠诲姟宸叉竻绌猴紒', style: TextStyle(fontSize: 18, color: Colors.grey[700], fontWeight: FontWeight.bold)),
          const SizedBox(height: 8),
          Text('鎵€鏈夊崟璇嶉兘宸叉帉鎻℃垨杩樻湭鍒板涔犳椂闂?, style: TextStyle(color: Colors.grey[500])),
          const SizedBox(height: 24),
          ElevatedButton.icon(
            onPressed: () => Navigator.pop(context),
            icon: const Icon(Icons.arrow_back),
            label: const Text('杩斿洖'),
            style: ElevatedButton.styleFrom(
              backgroundColor: _primaryColor,
              foregroundColor: Colors.white,
            ),
          ),
        ],
      ),
    );
  }

  Widget _buildContent() {
    return Column(
      children: [
        // 杩涘害鏉?        Padding(
          padding: const EdgeInsets.all(16),
          child: Row(
            children: [
              Text(
                '${_currentIndex + 1} / ${_words.length}',
                style: const TextStyle(fontWeight: FontWeight.bold),
              ),
              const SizedBox(width: 12),
              Expanded(
                child: ClipRRect(
                  borderRadius: BorderRadius.circular(4),
                  child: LinearProgressIndicator(
                    value: (_currentIndex + 1) / _words.length,
                    backgroundColor: Colors.grey[200],
                    valueColor: const AlwaysStoppedAnimation<Color>(_primaryColor),
                  ),
                ),
              ),
            ],
          ),
        ),

        // 鍗＄墖鍖哄煙
        Expanded(
          child: GestureDetector(
            onTap: _flipCard,
            child: Padding(
              padding: const EdgeInsets.symmetric(horizontal: 24),
              child: _buildFlashCard(),
            ),
          ),
        ),

        // 璇勫垎鎸夐挳
        _buildRatingButtons(),
      ],
    );
  }

  Widget _buildFlashCard() {
    final word = _currentWord;
    if (word == null) return const SizedBox();

    return AnimatedSwitcher(
      duration: const Duration(milliseconds: 300),
      child: Container(
        key: ValueKey(_showBack),
        width: double.infinity,
        padding: const EdgeInsets.all(32),
        decoration: BoxDecoration(
          color: Colors.white,
          borderRadius: BorderRadius.circular(16),
          boxShadow: [
            BoxShadow(
              color: Colors.black.withValues(alpha: 0.08),
              blurRadius: 16,
              offset: const Offset(0, 4),
            ),
          ],
        ),
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: _showBack ? _buildBackContent(word) : _buildFrontContent(word),
        ),
      ),
    );
  }

  List<Widget> _buildFrontContent(Map<String, dynamic> word) {
    return [
      Text(
        word['Word'] as String? ?? '',
        style: const TextStyle(fontSize: 36, fontWeight: FontWeight.bold),
        textAlign: TextAlign.center,
      ),
      const SizedBox(height: 16),
      Text(
        word['Symbol'] as String? ?? word['SymbolUs'] as String? ?? '',
        style: TextStyle(fontSize: 18, color: Colors.grey[600]),
      ),
      const SizedBox(height: 32),
      Text(
        '鐐瑰嚮鏄剧ず閲婁箟',
        style: TextStyle(color: Colors.grey[400]),
      ),
    ];
  }

  List<Widget> _buildBackContent(Map<String, dynamic> word) {
    return [
      Text(
        word['Word'] as String? ?? '',
        style: const TextStyle(fontSize: 28, fontWeight: FontWeight.bold),
        textAlign: TextAlign.center,
      ),
      const SizedBox(height: 8),
      Text(
        word['Symbol'] as String? ?? word['SymbolUs'] as String? ?? '',
        style: TextStyle(fontSize: 16, color: Colors.grey[600]),
      ),
      const Divider(height: 32),
      Text(
        word['Translate'] as String? ?? '',
        style: const TextStyle(fontSize: 20),
        textAlign: TextAlign.center,
      ),
      if ((word['Example'] as String? ?? '').isNotEmpty) ...[
        const SizedBox(height: 24),
        Container(
          padding: const EdgeInsets.all(12),
          decoration: BoxDecoration(
            color: Colors.grey[50],
            borderRadius: BorderRadius.circular(8),
          ),
          child: Column(
            crossAxisAlignment: CrossAxisAlignment.start,
            children: [
              Text(
                word['Example'] as String? ?? '',
                style: const TextStyle(fontStyle: FontStyle.italic),
              ),
              if ((word['ExampleTrans'] as String? ?? '').isNotEmpty) ...[
                const SizedBox(height: 4),
                Text(
                  word['ExampleTrans'] as String? ?? '',
                  style: TextStyle(color: Colors.grey[600], fontSize: 13),
                ),
              ],
            ],
          ),
        ),
      ],
    ];
  }

  Widget _buildRatingButtons() {
    return Container(
      padding: const EdgeInsets.all(16),
      child: Row(
        mainAxisAlignment: MainAxisAlignment.spaceEvenly,
        children: [
                      style: const TextStyle(fontSize: 13, color: Colors.black54),
                      style: const TextStyle(fontSize: 13),
          _buildRatingButton(2, '模糊', Colors.orange[400]!, '10分钟', Icons.help_outline),
          _buildRatingButton(3, '认识', Colors.green[400]!, '1天', Icons.done),
         _buildRatingButton(4, '太简单', Colors.blue[400]!, '4天', Icons.done_all),
      ),
    );
  }

  Widget _buildRatingButton(int rating, String label, Color color, String interval, IconData icon) {
    return Expanded(
      child: Padding(
        padding: const EdgeInsets.symmetric(horizontal: 4),
        child: ElevatedButton(
          onPressed: _isGrading ? null : () => _grade(rating),
          style: ElevatedButton.styleFrom(
            backgroundColor: color,
            foregroundColor: Colors.white,
            padding: const EdgeInsets.symmetric(vertical: 12),
            shape: RoundedRectangleBorder(
              borderRadius: BorderRadius.circular(8),
            ),
          ),
          child: Column(
            mainAxisSize: MainAxisSize.min,
            children: [
              Icon(icon, size: 20),
              const SizedBox(height: 4),
              Text(label, style: const TextStyle(fontSize: 12, fontWeight: FontWeight.bold)),
              Text(interval, style: const TextStyle(fontSize: 10)),
            ],
          ),
        ),
      ),
    );
  }
}